  <body>
    <main class="auth">
      <!-- Auth content -->
      <div class="auth__content">
        <div class="auth__content-inner">
          <a href="./" class="logo">
            <img
              src="./assets/icons/logo.png"
              alt="didong2tech"
              class="logo__img"
            />
            <h2 class="logo__title">DI ĐỘNG HIGH-TECH</h2>
          </a>
          <h1 class="auth__heading">TRANG QUẢN TRỊ</h1>
          <form action="/webadmin_dang_nhap" class="form auth__form" method="post">
            <div class="form__group">
              <div class="form__text-input">
                <input
                  type="email"
                  name="username"
                  id=""
                  placeholder="Email"
                  class="form__input"
                  autofocus
                  required
                />
                <img
                  src="./assets/icons/message.svg"
                  alt=""
                  class="form__input-icon"
                />
                <img
                  src="./assets/icons/form-error.svg"
                  alt=""
                  class="form__input-icon-error"
                />
              </div>
              <p class="form__error">định dạng (username@email.com)</p>
            </div>
            <div class="form__group">
              <div class="form__text-input">
                <input
                  type="password"
                  name="password"
                  id=""
                  placeholder="Mật khẩu"
                  class="form__input"
                  required
                  minlength="6"
                />
                <img
                  src="./assets/icons/lock.svg"
                  alt=""
                  class="form__input-icon"
                />
                <img
                  src="./assets/icons/form-error.svg"
                  alt=""
                  class="form__input-icon-error"
                />
              </div>
              <p class="form__error">Mật khẩu phải dài hơn 6 kí tự</p>
            </div>
            <div class="form__group auth__btn-group">
                <button class="btn btn--primary auth__btn form__submit-btn">
                  Đăng nhập
                </button>
            </div>
          </form>
        </div>
      </div>
    </main>
